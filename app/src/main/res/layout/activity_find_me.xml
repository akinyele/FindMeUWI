<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="com.android.comp3901.findmeuwi.ui.mapFragment.MapFrag"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_find_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.74"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/search_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-70dp"
            android:animateLayoutChanges="true"
            android:layout_weight="2.74"
            android:orientation="horizontal"
            >

            <AutoCompleteTextView
                android:id="@+id/getSource"
                style="@style/FullWidthEditText"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1.24"
                android:background="@drawable/search_text_view"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:drawableLeft="@drawable/ic_map_marker"
                android:dropDownVerticalOffset="5dp"
                android:dropDownWidth="wrap_content"
                android:hint="starting point."
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:animateLayoutChanges="true"
                android:padding="10dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/locationToggle"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:checked="false"
                android:onClick="toggleLocations"
                android:text="ToggleButton"
                android:textOff="@string/location_off"
                android:textOn="@string/location_on" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="69dp"
            android:orientation="horizontal">


            <AutoCompleteTextView
                android:id="@+id/classSearch"
                style="@style/FullWidthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search_text_view"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/ic_dest_marker"
                android:hint="What room would you like to find?"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:animateLayoutChanges="true"
                android:textStyle="bold" />

            <Button
                android:id="@+id/findBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:elevation="0dp"
                android:onClick="geoLocate"
                android:text="Find" />


        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/layout_background"
        android:backgroundTint="@color/LightGrey"
        android:elevation="10dp"
        android:hapticFeedbackEnabled="false"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="PLACE"
                android:textAlignment="center"
                android:textAllCaps="false"

                android:textColor="@color/Black"
                android:textStyle="bold" />


            <HorizontalScrollView
                android:id="@+id/bottom_sheet_horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:background="@drawable/cast_skip_ad_label_border"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/place_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />


                    <ImageButton
                        android:id="@+id/bottom_sheet_add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_action_route"
                        android:background="@color/OrangeRed"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cast_skip_ad_label_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/place_info1"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:padding="16dp"
                    android:text="place_info1"
                    android:textAllCaps="true"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/cast_skip_ad_label_border"-->
                <!--android:orientation="horizontal"-->
                <!--android:paddingBottom="16dp"-->
                <!--android:paddingTop="16dp">-->
                <!---->
                <!--<ImageView-->
                <!--android:id="@+id/show_info"-->
                <!--android:layout_width="38dp"-->
                <!--android:layout_height="37dp"-->
                <!--android:layout_marginRight="5dp"-->
                <!--app:srcCompat="@drawable/ic_eye" />-->
                <!---->
                <!--<TextView-->
                <!--android:id="@+id/place_info2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingTop="8dp"-->
                <!--android:text="place_info2"-->
                <!--android:textColor="@color/Black"-->
                <!--android:textSize="16sp" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/more_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.00"
                        android:clickable="false"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

                    <TextView
                        android:id="@+id/place_info3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:clickable="false"
                        android:paddingTop="5dp"
                        android:text="more info?"
                        android:textColor="?attr/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:elevation="100dp"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/ic_action_route"
        app:backgroundTint="?attr/actionModeSplitBackground"
        app:elevation="24dp"
        app:fabSize="normal"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|end"
        app:rippleColor="#b6b6b6" />

</android.support.design.widget.CoordinatorLayout>





